{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "outDir": "build",
        "resolveJsonModule": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "ESNext"
    },
    "include": [
        "./src/**/*.ts",
        "./test/**/*.ts",
        "./.eslintrc.cjs",
        "./tsup.config.ts",
        "./vitest.config.ts"
    ],
    "exclude": ["dist", "build", "node_modules"]
}
