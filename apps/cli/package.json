{
    "name": "@dach/cli",
    "version": "1.1.0",
    "description": "Command line interface for Dach",
    "author": "Maciej Kukielka <matthiaskukielka@gmail.com>",
    "keywords": [
        "banner",
        "generator",
        "theme",
        "cli",
        "art",
        "readme",
        "tool"
    ],
    "license": "MIT",
    "homepage": "https://dach.kukielka.xyz",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/7sne/dach.git"
    },
    "bugs": {
        "url": "https://github.com/7sne/dach/issues"
    },
    "main": "./dist/cli.cjs",
    "bin": {
        "dach": "dist/cli.cjs"
    },
    "exports": {
        ".": {
            "require": "./dist/cli.cjs"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "cross-env esno src/cli.ts",
        "build": "pnpm unbuild",
        "release": "npm publish",
        "test": "vitest run --coverage",
        "stub": "pnpm unbuild --stub",
        "lint": "eslint --ext .ts,.js . && prettier src/**/*.ts test/**/*.ts",
        "lint:fix": "eslint --fix --ext .ts,.js . && prettier --write src/**/*.ts test/**/*.ts",
        "format": "prettier src/**/*.ts test/**/*.ts",
        "format:fix": "prettier --write src/**/*.ts test/**/*.ts",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@changesets/cli": "^2.26.2",
        "@dach/shared": "workspace:*",
        "canvas": "^2.10.2",
        "chalk": "^4.1.2",
        "commander": "^11.0.0",
        "conf": "^10.1.2",
        "yoga-layout-prebuilt": "^1.10.0",
        "zod": "^3.22.2"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^0.39.5",
        "@types/node": "^20.4.8",
        "@types/pixelmatch": "^5.2.4",
        "@types/pngjs": "^6.0.1",
        "@types/yoga-layout": "^1.9.4",
        "@vitest/coverage-v8": "^0.34.4",
        "cross-env": "^7.0.3",
        "eslint": "^8.43.0",
        "execa": "^8.0.1",
        "pixelmatch": "^5.3.0",
        "pngjs": "^7.0.0",
        "prettier": "^3.0.3",
        "typescript": "^5.1.5",
        "unbuild": "^1.2.1",
        "unconfig": "^0.3.9",
        "vitest": "^0.34.4"
    },
    "peerDependencies": {
        "typescript": "^5.2.2"
    },
    "peerDependenciesMeta": {
        "typescript": {
            "optional": true
        }
    },
    "packageManager": "pnpm@8.6.7"
}
