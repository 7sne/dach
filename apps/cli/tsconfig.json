{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "outDir": "build",
        "resolveJsonModule": true,
        "rootDir": ".",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "ESNext",
        "types": ["node", "vitest/importMeta", "vitest/globals"]
    },
    "include": [
        "./src/**/*.ts",
        "./test/**/*.ts",
        "./.eslintrc.cjs",
        "./build.config.js"
    ]
}
